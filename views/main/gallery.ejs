<!--gallery header image-->
<section class="container-fluid header-section-gallery text-center py-5">
  <div class="container-fluid text-center">
    <h1 class="h1-upper mb-5 bounceIn" style="color: rgb(0, 0, 0);font-size: 6.5vw;opacity: .6;">Gallery</h1>
  </div>
</section>

<!--gallery title-->
<section class="container-fluid mt-5 py-5">
  <h1 class="text-center" style="font-size: 60px;">Featured Collections</h1>
</section>

<!--gallery collections container landscapes-->

<main class="dark-section pb-3">
  <section class="container-fluid mb-5">
    <h1 class="py-5 h1-upper text-center">Landscapes</h1>
    <div class="row" id="">
      <!--grabbing 3 paintings from paintings data by slicing at index-->
      <% for(let painting of paintings.slice(0,3)) {%>
      <!--if paintings type is landscape show=>-->
      <% if(painting.type = 'landscape') {%> 
      <div class="col-lg-4 d-flex align-items-center justify-content-center img-three img-wrapper my-3" id="card">
        <div class="card painting-item px-4 d-flex align-items-center" data-item-id="<%= painting.id %> ">
          <!--utilizing onmouseover to show image setting using second image of model when user hovers over main image-->
          <a href="/gallery/<%= painting.id %>"><img src="<%= painting.image %> " onmouseover="this.src='<%= painting.img %>'" onmouseout="this.src='<%= painting.image %>'" style="width: 400px; height: 400px; background-size: contain;" class="img-fluid responsive py-5" id="galleryImg" alt="Landscape painting"></a>
          <div class="row">
            <h5 class="text-center pb-2"> <%= painting.title %> </h5>
            <% if(painting.isAvailable === true) {%> 
            <h3 class="text-center">€ <%= painting.price %></h3>
            <% }else {%> 
            <h6 class="text-center">Not Available</h6>
            <% } %> 
            <a href="/gallery/<%= painting.id %> " class="btn btn-outline-secondary mt-3">PREVIEW</a>
            <% if(painting.isAvailable === true) {%> 
            <a href="<%=painting.stripe_link%>" class="btn btn-primary my-3" id="add">BUY</a>
            <% }else {%> 
            <button class="btn btn-secondary my-3" disabled>SOLD</button>
            <% } %> 
          </div>
        </div>
      </div>
      <div class="modal">
        <div class="modal-img">
          <img src="#"
              alt=""
            />
          </div>
        </div>
        <% } %> 
        <% } %>
      </div>
      <div class="d-flex justify-content-center">
        <a href="/gallery/landscape" class="btn btn-outline-dark px-5">VIEW ALL</a>
      </div>                
    </div>
  </section>
</main>

